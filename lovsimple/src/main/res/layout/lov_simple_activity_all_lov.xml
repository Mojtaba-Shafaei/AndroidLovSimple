<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/lov_simple_root"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/lov_simple_blue_grey50">

  <android.support.design.card.MaterialCardView
    android:id="@+id/lov_simple_card_appBar"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lov_simple_config_toolbar_height"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardBackgroundColor="@color/lov_simple_Color_White"
    app:cardCornerRadius="@dimen/lov_simple_cardCornerRadius"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageButton
          android:id="@+id/lov_simple_btn_back"
          android:layout_width="@dimen/lov_simple_config_button_height"
          android:layout_height="@dimen/lov_simple_config_button_height"
          android:layout_marginRight="8dp"
          android:background="@drawable/lov_simple_bgs_flat_button_transparent_oval"
          android:scaleType="centerInside"
          android:translationX="48dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:src="@drawable/lov_simple_ic_arrow_back_grey_600_24dp"
          tools:translationX="0dp"/>

        <android.support.v7.widget.AppCompatEditText
          android:id="@+id/lov_simple_search_view"
          android:layout_width="0dp"
          android:layout_height="@dimen/lov_simple_height_editText"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:background="@android:color/transparent"
          android:gravity="right|center_vertical"
          android:hint="@string/lov_simple_action_search"
          android:imeOptions="actionSearch|flagNoExtractUi"
          android:inputType="text|textFilter|textAutoComplete"
          android:maxLines="1"
          android:textColor="@color/lov_simple_text_colors_dark"
          android:textColorHint="@color/lov_simple_disabledAndHintTextLight"
          android:textSize="14sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toRightOf="@id/lov_simple_btn_clear_search"
          app:layout_constraintRight_toLeftOf="@id/lov_simple_btn_back"
          app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.AppCompatImageButton
          android:id="@+id/lov_simple_btn_clear_search"
          android:layout_width="@dimen/lov_simple_config_button_height"
          android:layout_height="@dimen/lov_simple_config_button_height"
          android:layout_marginLeft="8dp"
          android:background="@drawable/lov_simple_bgs_flat_button_transparent_oval"
          android:scaleType="centerInside"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:src="@drawable/lov_simple_ic_close_grey_600_24dp"/>
      </android.support.constraint.ConstraintLayout>

      <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/lov_simple_progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-10dp"
        android:indeterminate="true"/>
    </LinearLayout>
  </android.support.design.card.MaterialCardView>

  <FrameLayout
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="-10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/lov_simple_card_appBar">

    <android.support.v7.widget.RecyclerView
      android:id="@+id/lov_simple_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:listitems="@@layout/lov_simple_li_simple1"/>

    <android.support.v7.widget.AppCompatTextView
      android:id="@+id/lov_simple_tv_message"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_gravity="center_horizontal|top"
      android:gravity="center"
      android:textColor="@color/lov_simple_text_colors_dark"
      android:textSize="14sp"
      android:visibility="gone"
      tools:text="@tools:sample/lorem"/>
  </FrameLayout>

</android.support.constraint.ConstraintLayout>