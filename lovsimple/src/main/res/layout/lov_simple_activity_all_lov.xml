<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/lov_simple_root"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/lov_simple_blue_grey50">

  <android.support.design.card.MaterialCardView
    android:id="@+id/lov_simple_card_appBar"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="@dimen/lov_simple_margin_horizontally"
    android:layout_marginRight="@dimen/lov_simple_margin_horizontally"
    app:cardBackgroundColor="@color/lov_simple_Color_White"
    app:cardCornerRadius="@dimen/lov_simple_cardCornerRadius"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">

        <android.support.v7.widget.AppCompatImageButton
          android:id="@+id/lov_simple_btn_back"
          android:layout_width="@dimen/lov_simple_config_button_height"
          android:layout_height="@dimen/lov_simple_config_button_height"
          android:background="@drawable/lov_simple_bgs_flat_button_transparent_oval"
          android:foreground="?selectableItemBackgroundBorderless"
          android:scaleType="centerInside"
          android:translationX="48dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:src="@drawable/lov_simple_ic_arrow_back_grey_600_24dp"
          tools:translationX="0dp"/>

        <android.support.v7.widget.AppCompatEditText
          android:id="@+id/lov_simple_search_view"
          style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:background="@android:color/transparent"
          android:gravity="start|center_vertical"
          android:hint="@string/lov_simple_action_search"
          android:imeOptions="actionNone|flagNoExtractUi"
          android:inputType="text|textNoSuggestions"
          android:lines="1"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toRightOf="@id/lov_simple_btn_clear_search"
          app:layout_constraintRight_toLeftOf="@id/lov_simple_btn_back"
          app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.AppCompatImageButton
          android:id="@+id/lov_simple_btn_clear_search"
          android:layout_width="@dimen/lov_simple_config_button_height"
          android:layout_height="@dimen/lov_simple_config_button_height"
          android:background="@drawable/lov_simple_bgs_flat_button_transparent_oval"
          android:foreground="?selectableItemBackgroundBorderless"
          android:scaleType="centerInside"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:src="@drawable/lov_simple_ic_close_grey_600_24dp"/>
      </android.support.constraint.ConstraintLayout>

      <ProgressBar
        android:id="@+id/lov_simple_progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:indeterminate="true"/>
    </LinearLayout>
  </android.support.design.card.MaterialCardView>

  <FrameLayout
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="-10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/lov_simple_card_appBar">

    <android.support.v7.widget.RecyclerView
      android:id="@+id/lov_simple_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:listitems="@@layout/lov_simple_li_simple1"/>

    <android.support.v7.widget.AppCompatTextView
      android:id="@+id/lov_simple_tv_message"
      style="@style/TextAppearance.AppCompat.Small"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_gravity="center_horizontal|top"
      android:paddingTop="4dp"
      android:paddingBottom="4dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:background="@drawable/lov_simple_bg_toast"
      android:gravity="center"
      android:minHeight="40dp"
      android:textColor="#B94A48"
      android:textSize="14sp"
      android:visibility="gone"
      tools:text="@tools:sample/lorem"
      tools:visibility="visible"/>
  </FrameLayout>

</android.support.constraint.ConstraintLayout>