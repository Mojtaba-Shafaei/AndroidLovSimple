<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingLeft="@dimen/lov_simple_margin_horizontally"
  android:paddingRight="@dimen/lov_simple_margin_horizontally"
  android:background="@drawable/lov_simple_item_background"
  android:clickable="true"
  android:descendantFocusability="blocksDescendants"
  android:focusable="true"
  android:foreground="?android:attr/selectableItemBackground"
  android:minHeight="?android:listPreferredItemHeight">

  <android.support.v7.widget.AppCompatImageView
    android:id="@+id/iv_logo"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:scaleType="centerInside"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@tools:sample/avatars"
    tools:visibility="visible"/>

  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/tv_title"
    style="@style/TextAppearance.AppCompat.Medium"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="24dp"
    android:clickable="false"
    android:ellipsize="end"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:gravity="start|center_vertical"
    android:lineSpacingMultiplier="1.2"
    android:lines="2"
    android:textAlignment="viewStart"
    android:textIsSelectable="false"
    app:layout_constraintBottom_toBottomOf="@id/iv_logo"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/iv_logo"
    app:layout_constraintTop_toTopOf="@id/iv_logo"
    app:layout_goneMarginRight="0dp"
    tools:text="@tools:sample/lorem"/>
</android.support.constraint.ConstraintLayout>