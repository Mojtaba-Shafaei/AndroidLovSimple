<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingTop="4dp"
  android:paddingBottom="4dp"
  android:paddingLeft="8dp"
  android:paddingRight="8dp"
  android:background="@drawable/lov_simple_item_background"
  android:clickable="true"
  android:descendantFocusability="blocksDescendants"
  android:focusable="true"
  android:foreground="?android:attr/selectableItemBackground">

  <android.support.v7.widget.AppCompatImageView
    android:id="@+id/iv_logo"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:scaleType="centerInside"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@tools:sample/avatars"
    tools:visibility="visible"/>

  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/tv_title"
    android:layout_width="0dp"
    android:layout_height="@dimen/lov_simple_height_listItemSingle"
    android:layout_marginRight="16dp"
    android:ellipsize="end"
    android:gravity="center_vertical|right"
    android:minHeight="@dimen/lov_simple_height_listItemSingle"
    android:textColor="@color/lov_simple_text_colors_flat_button_light"
    android:textDirection="rtl"
    android:textSize="@dimen/lov_simple_text_size_small"
    app:layout_constraintBottom_toBottomOf="@id/iv_logo"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/iv_logo"
    app:layout_constraintTop_toTopOf="@id/iv_logo"
    app:layout_goneMarginRight="0dp"
    tools:text="@tools:sample/lorem"/>
</android.support.constraint.ConstraintLayout>